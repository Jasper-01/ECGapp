<resources>
    <style name="homepg_mainTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/app_name_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="homepg_subTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autofillHints"> </item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/mainPg_subtitle</item>
        <item name="android:textSize">16sp</item>
<!--        <item name="android:textStyle">italic</item>-->
        <item name="android:textAlignment">center</item>
    </style>

    <style name="homepg_button" parent="android:Widget.Button">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">true</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>
    
    <style name="subpg_mainTitle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/app_name_color</item>
        <item name="android:textSize">32sp</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="timeClock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="heartRate" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
    </style>

    <style name="heartRateDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="save_button" parent="android:Widget.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="bluetoothPg_images">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="bluetooth_onOff" parent="android:Widget.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
    </style>

    <style name="bluetooth_detailsListing" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
    </style>

    <style name="bluetoothShowDevices" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
    </style>

    <style name="userInfo_details" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
    </style>

    <style name="userInfo_detailsListing">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
    </style>
    
    <style name="credits_listing" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/app_name_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
    </style>

    <style name="HistoryList" parent="android:Widget.ListView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:fontFamily">@font/fredoka_one</item>
    </style>
</resources>