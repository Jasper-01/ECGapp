<resources>
    <!-- Base application theme. -->
    <style name="MainPgTheme" parent="Theme.AppCompat">
        <item name="android:background">@drawable/bg_homepage_</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SubPgTheme" parent="Theme.AppCompat">
        <item name="android:background">@drawable/bg_buttonpage_</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PopUpMenu" parent="android:Widget.PopupMenu">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>