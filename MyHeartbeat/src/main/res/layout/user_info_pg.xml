<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfo_pg">

    <TextView
        android:id="@+id/MainTitle"
        style="@style/subpg_mainTitle"
        android:layout_marginTop="100dp"
        android:text="@string/UserInformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/UserName"
        style="@style/userInfo_details"
        android:layout_marginTop="50dp"
        android:text="@string/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/MainTitle" />

    <EditText
        android:id="@+id/UserNameDisplay"
        style="@style/userInfo_detailsListing"
        android:text="@string/sampleName"
        android:layout_marginStart="8dp"
        android:autofillHints=""
        android:inputType="text"
        android:hint="@string/sampleName"
        app:layout_constraintTop_toTopOf="@id/UserName"
        app:layout_constraintBottom_toBottomOf="@id/UserName"
        app:layout_constraintStart_toEndOf="@id/UserName" />

    <View
        android:id="@+id/underlineName"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/UserNameDisplay"
        app:layout_constraintStart_toStartOf="@id/UserNameDisplay"
        app:layout_constraintEnd_toEndOf="@id/UserNameDisplay"/>

    <TextView
        android:id="@+id/UserID"
        style="@style/userInfo_details"
        android:layout_marginTop="20dp"
        android:text="@string/userID"
        app:layout_constraintStart_toStartOf="@id/UserName"
        app:layout_constraintTop_toBottomOf="@+id/UserName" />

    <TextView
        android:id="@+id/UserIDDisplay"
        style="@style/userInfo_detailsListing"
        android:layout_marginStart="8dp"
        android:text="@string/sampleID"
        app:layout_constraintTop_toTopOf="@id/UserID"
        app:layout_constraintBottom_toBottomOf="@id/UserID"
        app:layout_constraintStart_toEndOf="@id/UserID"/>

    <TextView
        android:id="@+id/deviceName"
        style="@style/userInfo_details"
        android:layout_marginTop="36dp"
        android:text="@string/deviceName"
        app:layout_constraintStart_toStartOf="@id/UserID"
        app:layout_constraintTop_toBottomOf="@id/UserID" />

    <TextView
        android:id="@+id/deviceNameDisplay"
        style="@style/userInfo_detailsListing"
        android:layout_marginTop="0dp"
        android:text="@string/sampleDeviceName"
        app:layout_constraintStart_toStartOf="@id/deviceName"
        app:layout_constraintTop_toBottomOf="@+id/deviceName" />

    <Button
        android:id="@+id/changeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/UserNameDisplay"
        app:layout_constraintBottom_toBottomOf="@id/UserNameDisplay"
        app:layout_constraintStart_toEndOf="@+id/UserNameDisplay" />

    <TextView
        android:id="@+id/deviceMAC"
        style="@style/userInfo_details"
        android:layout_marginTop="10dp"
        android:text="@string/deviceMAC"
        app:layout_constraintStart_toStartOf="@id/deviceNameDisplay"
        app:layout_constraintTop_toBottomOf="@+id/deviceNameDisplay" />

    <TextView
        android:id="@+id/deviceMACDisplay"
        style="@style/userInfo_detailsListing"
        android:text="@string/sampleMAC"
        app:layout_constraintStart_toStartOf="@id/deviceMAC"
        app:layout_constraintTop_toBottomOf="@+id/deviceMAC" />

    <TextView
        android:id="@+id/deviceTimeZone"
        style="@style/userInfo_details"
        android:layout_marginTop="10dp"
        android:text="@string/deviceTimeZone"
        app:layout_constraintStart_toStartOf="@id/deviceMACDisplay"
        app:layout_constraintTop_toBottomOf="@+id/deviceMACDisplay" />

    <TextView
        android:id="@+id/deviceTimeZoneDisplay"
        style="@style/userInfo_detailsListing"
        android:text="@string/sampleTimeZone"
        app:layout_constraintStart_toStartOf="@id/deviceTimeZone"
        app:layout_constraintTop_toBottomOf="@+id/deviceTimeZone" />

</androidx.constraintlayout.widget.ConstraintLayout>